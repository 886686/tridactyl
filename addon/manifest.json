{

  "manifest_version": 2,
  "name": "Tridactyl",
  "version": "1.0",

  "background" : {
    "scripts": ["main.js"]
  },

  "browser_action": {
    "default_title": "Tridactyl",
    "browser_style": true
  },

  "permissions": [
      "activeTab",
      "alarms",
      "bookmarks",
      "contextMenus",
      "cookies",
      "downloads",
      "downloads.open",
      "history",
      "identity",
      "idle",
      "management",
      "nativeMessaging",
      "notifications",
      "sessions",
      "storage",
      "tabs",
      "topSites",
      "webNavigation",
      "webRequest",
      "webRequestBlocking",
      "<all_urls>"
    ]

}
