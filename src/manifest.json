{

  "manifest_version": 2,
  "name": "Tridactyl",
  "version": "1.0",

  "background" : {
    "scripts": ["keydown_background.js", "commandline_background.js", "excmds_background.js", "parsing.js", "main.js"]
  },

  "content_scripts": [
      {
          "matches":["<all_urls>"],
          "js":["keydown_content.js", "commandline_content.js", "excmds_content.js"]
      }
  ],

  "web_accessible_resources": [
    "commandline/commandline.html"
  ],


  "permissions": [
      "activeTab",
      "alarms",
      "bookmarks",
      "contextMenus",
      "cookies",
      "downloads",
      "downloads.open",
      "history",
      "identity",
      "idle",
      "management",
      "nativeMessaging",
      "notifications",
      "sessions",
      "storage",
      "tabs",
      "topSites",
      "webNavigation",
      "webRequest",
      "webRequestBlocking",
      "<all_urls>"
    ],

    "applications": {
      "gecko": {
        "id": "tridactyl@cmcaine.co.uk"
      }
    }

}
