{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "outDir": "build/tsc-out",
    "sourceMap": true,
    "target": "es2017",
    "lib": ["es2017", "es2019.array", "es2018.promise", "dom", "dom.iterable"],
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "node"],
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "baseUrl": "src/",
    "paths": {
        "@src/*": ["*"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
      "./src/**/*.test.ts"
  ]
}
